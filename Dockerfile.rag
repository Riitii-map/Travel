FROM python:3.9-slim

WORKDIR /app

# Copy only the files needed for the RAG service
COPY rag_service.py ./
COPY ragpipeline/ ./ragpipeline/
COPY requirements-rag.txt ./requirements.txt

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Set environment variables
ENV PORT=8080

# Run the FastAPI app
CMD exec uvicorn rag_service:app --host 0.0.0.0 --port ${PORT}